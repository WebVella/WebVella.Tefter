@namespace WebVella.Tefter.Assets.Components

@inherits TucBaseViewColumn<TfFolderAssetsCountComponentOptions>
@if (Context.Mode == TucComponentMode.Display)
{

	<div>
		@if (componentOptions.FolderId is not null)
		{
			<FluentButton Appearance="@Appearance.Outline" OnClick="_onClick">
				<FluentIcon Value="@TfConstants.GetIcon("DocumentCopy")" />
			</FluentButton>
		}
		else
		{
			<FluentIcon Value="TfConstants.ErrorIcon" Title="@LOC("channel is not configured")" />
		}
	</div>


}
else if (Context.Mode == TucComponentMode.Options)
{
	<FluentGrid>
		<FluentGridItem xs="6">
			<FluentSelect TOption="AssetsFolder"
						  Items="_folders"
						  OptionText="(x=> x.Name)"
						  SelectedOption="_selectedFolder"
						  SelectedOptionChanged="_folderSelectHandler"
						  Value="@(_selectedFolder?.Id.ToString())" />
		</FluentGridItem>

	</FluentGrid>
}
else
{
	<div style="color:red">@LOC("Component Mode Not implemented")</div>
}


