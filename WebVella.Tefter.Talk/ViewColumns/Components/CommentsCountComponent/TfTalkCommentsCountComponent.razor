@namespace WebVella.Tefter.Talk.Components

@inherits TucBaseViewColumn<TfTalkCommentsCountComponentOptions>
@if (Context.Mode == TucComponentMode.Display)
{

	<div>
		@if (componentOptions.ChannelId is not null)
		{
			<FluentButton Appearance="@Appearance.Outline" OnClick="_onClick">
				<FluentIcon Value="@TfConstants.GetIcon("Comment")" />
			</FluentButton>
		}
		else
		{
			<FluentIcon Value="TfConstants.ErrorIcon" Title="@LOC("channel is not configured")" />
		}
	</div>


}
else if (Context.Mode == TucComponentMode.Options)
{
	<FluentGrid>
		<FluentGridItem xs="6">
			<FluentSelect TOption="TalkChannel"
						  Items="_channels"
						  OptionValue="@((p)=> p.Id.ToString())"
						  OptionText="(x=> x.Name)"
						  SelectedOption="_selectedChannel"
						  SelectedOptionChanged="_channelSelectHandler"
						  Value="@(_selectedChannel?.Id.ToString())" />
		</FluentGridItem>

	</FluentGrid>
}
else
{
	<div style="color:red">@LOC("Component Mode Not implemented")</div>
}


