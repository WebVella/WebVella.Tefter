@namespace WebVella.Tefter.Demo.Components
@inherits WvBaseComponent
<div class="sidebar-nav">
	<FluentNavMenu>
		<FluentNavLink Icon="@(new Icons.Regular.Size20.Board())" Tooltip="Dashboard"
					   Href="/" Match="@NavLinkMatch.All">Dashboard</FluentNavLink>
		<FluentNavLink Icon="@(new Icons.Regular.Size20.TableLightning())" Tooltip="Fast Access"
					   Href="/fast-access" Match="@NavLinkMatch.Prefix">Fast Access</FluentNavLink>
	</FluentNavMenu>
	<FluentDivider Class="nav-divider"></FluentDivider>
	<div class="button-actions">
		<div class="button-actions-left">
			<FluentButton Id="space-selector" Title="@selectedSpace.Name"
						  OnClick="() => spaceSelectorVisible = !spaceSelectorVisible">
				@selectedSpace.Name
				<FluentIcon Value="@selectedSpace.Icon" Color="@selectedSpace.IconColor" Slot="start" />
			</FluentButton>
			<FluentPopover Style="width: 300px;" VerticalThreshold="170" AnchorId="space-selector" @bind-Open="spaceSelectorVisible">
				<Header>Callout Header</Header>
				<Body>
					<FluentStack Orientation="Orientation.Vertical">
						<FluentCheckbox>Item 1</FluentCheckbox>
						<FluentCheckbox>Item 2</FluentCheckbox>
						<FluentTextField tabindex="0"></FluentTextField>
					</FluentStack>
				</Body>
				<Footer>Callout Footer</Footer>
			</FluentPopover>
		</div>
		<div class="button-actions-right">
			<FluentButton Id="space-settings" Title="edit settings" IconStart="@(new Icons.Regular.Size20.Settings())"
						  OnClick="() => spaceSettingsVisible = !spaceSettingsVisible" />
			<FluentMenu Anchor="space-settings" @bind-Open="spaceSettingsVisible" Width="200px">
				<FluentMenuItem>
					Rename Space
					<span slot="start">
						<FluentIcon Value="@(new Icons.Regular.Size20.ClipboardPaste())" Slot="start" />
					</span>
				</FluentMenuItem>
				<FluentMenuItem>
					Delete Space
					<span slot="start">
						<FluentIcon Value="@(new Icons.Regular.Size20.Delete())" Slot="start" />
					</span>
				</FluentMenuItem>
				<FluentDivider></FluentDivider>
				<FluentMenuItem>
					Add Space
					<span slot="start">
						<FluentIcon Value="@(new Icons.Regular.Size20.Add())" Slot="start" />
					</span>
				</FluentMenuItem>

			</FluentMenu>
		</div>
	</div>
	<FluentNavMenu>
		@foreach (var item in spaceItems)
		{
			<FluentNavLink @key=@item.Id Icon="@item.Icon" Tooltip="@item.Title"
						   Href="@item.Url" Match="@item.Match">@item.Title</FluentNavLink>
		}

	</FluentNavMenu>
</div>