@inherits TfFormBaseComponent
@using WebVella.Tefter.Web.Components.Card;

<FluentEditForm EditContext="EditContext" FormName="dp-settings" class="tf-form" novalidate>
	<FluentGrid>
		<FluentGridItem xs="6">
			<FluentTextField Required="DisplayMode == Web.Models.ComponentDisplayMode.Form" TextFieldType="@TextFieldType.Text"
							 @bind-Value=_form.Filepath ReadOnly="DisplayMode == Web.Models.ComponentDisplayMode.ReadOnly"
							 Label="@LOC("CSV File with full access path")" Style="width:100%" />
			<FluentValidationMessage For="@(() => _form.Filepath)" />
		</FluentGridItem>
		<FluentGridItem xs="6"></FluentGridItem>
	</FluentGrid>
</FluentEditForm>


