@namespace WebVella.Tefter.Extra.Addons
@inherits TfRecipeStepFormBase

<FluentEditForm EditContext="EditContext"
                FormName="submit-form" class="tf-form" novalidate>
	<DataAnnotationsValidator />
	<FluentGrid>
		<FluentGridItem xs="12">
			<FluentTextField TextFieldType="@TextFieldType.Text" @bind-Value=@_form.BuildingCode
			                 Label="@LOC("BuildingCode")" Style="width:100%" AutoComplete="off" Placeholder="@LOC("eg.WESTRING1")" />
			<FluentValidationMessage For="@(() => _form.BuildingCode)" />
			<div class="tf-input-description">@LOC("only latin capital letters and numbers are allowed")</div>
		</FluentGridItem>
		<FluentGridItem xs="6">
		</FluentGridItem>
	</FluentGrid>
</FluentEditForm>