@namespace WebVella.Tefter.Web.ViewColumns
@inherits TfBaseViewColumn<TfDateOnlyDisplayColumnComponentOptions>
@if (Context.Mode == TfComponentMode.Display)
{
	var format = !String.IsNullOrWhiteSpace(options.Format) ? options.Format : _defaultFormat;
	<div>@_value?.ToString(format)</div>
}
else if (Context.Mode == TfComponentMode.Options)
{
	<FluentGrid>
		<FluentGridItem xs="6">
			<FluentTextField Label="@LOC("Format")"
							 Value="@options.Format" Style="width:100%"
							 ValueChanged=@((x)=> OnOptionsChanged(nameof(options.Format),x))
							 Placeholder="@LOC("eg. 'dd MMM yyyy'")" />
			<div class="tf-input-description">@LOC("defaults to the system's short date format")</div>
		</FluentGridItem>
		<FluentGridItem xs="6"></FluentGridItem>
	</FluentGrid>
}
else
{
	<div style="color:red">@LOC("Component Mode Not implemented")</div>
}

