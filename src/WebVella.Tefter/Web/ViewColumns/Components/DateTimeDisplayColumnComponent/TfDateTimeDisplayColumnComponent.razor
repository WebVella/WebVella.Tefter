@namespace WebVella.Tefter.Web.ViewColumns
@inherits TfBaseViewColumn<TfDateTimeDisplayColumnComponentOptions>
@if (Context.Mode == TfComponentMode.Display)
{
	var value = GetDataStructByAlias<DateTime>(_valueAlias, null);
	var options = GetOptions();
	<div>@value?.ToString(options.Format)</div>
}
else if (Context.Mode == TfComponentMode.Options)
{
	<FluentGrid>
		<FluentGridItem xs="6">
			<FluentTextField Label="@LOC("Format")"
							 Value="@componentOptions.Format" Style="width:100%" Immediate ImmediateDelay="500"
							 ValueChanged=@((x)=> OnOptionsChanged(nameof(componentOptions.Format),x))
							 Placeholder="@LOC("eg. 'dd MMM yyyy HH:mm'")" />
			<div class="tf-input-description">@LOC("defaults to the system's short date and time format")</div>
		</FluentGridItem>
		<FluentGridItem xs="6"></FluentGridItem>
	</FluentGrid>
}
else
{
	<div style="color:red">@LOC("Component Mode Not implemented")</div>
}

