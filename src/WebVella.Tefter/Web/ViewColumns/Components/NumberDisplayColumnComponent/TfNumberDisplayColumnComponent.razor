@namespace WebVella.Tefter.Web.ViewColumns
@inherits TfBaseViewColumn<TfNumberDisplayColumnComponentOptions>
@if (Context.Mode == TfComponentMode.Display)
{
	var value = GetDataObjectByAlias<decimal>("Value", null);
	<div>@value</div>
}
else if (Context.Mode == TfComponentMode.Options)
{
	<FluentMessageBar Intent="@MessageIntent.Info" Title="@LOC("The selected component has no options")" AllowDismiss="false" />
}
else
{
	<div style="color:red">@LOC("Component Mode Not implemented")</div>
}


