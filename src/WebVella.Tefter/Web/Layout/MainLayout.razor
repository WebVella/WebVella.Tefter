@inherits LayoutComponentBase
@layout StateLayout
<TfStateInit>
	<FluentDesignTheme Mode="@TfUserState.Value.ThemeMode" OfficeColor="@TfUserState.Value.ThemeColor" />
	<FluentLayout Class="@(TfUserState.Value.SidebarExpanded ? "sidebar-expanded" : "sidebar-collapsed")">
		<FluentHeader Class="header">
			<TfSidebarToggle />
			<TfLocation />
			<FluentSpacer />
			<TfUserNavigation />
		</FluentHeader>
		<FluentStack Orientation="Orientation.Horizontal" Class="wrapper" HorizontalGap="0" VerticalGap="0">
			<FluentStack Orientation="Orientation.Vertical" Class="spacenav" HorizontalGap="0" VerticalGap="0">
				<TfNavigation />
			</FluentStack>
			<FluentBodyContent Class="content" style="@($"border-top-color:{TfUserState.Value.ThemeColorString}")">
				@Body
			</FluentBodyContent>
		</FluentStack>
	</FluentLayout>
</TfStateInit>

