@inherits FluxorLayout

<TfAppInit>
	<FluentDesignTheme Mode="@ThemeState.Value.ThemeMode" OfficeColor="@SpaceState.Value.SpaceColor" />
	<FluentLayout Class="@(ScreenStateSidebarExpanded.Value ? "sidebar-expanded" : "sidebar-collapsed")">
		<FluentHeader Class="header">
			<TfSidebarToggle />
			<TfLocation />
			<FluentSpacer />
			<TfUserNavigation />
		</FluentHeader>
		<FluentStack Orientation="Orientation.Horizontal" Class="wrapper" HorizontalGap="0" VerticalGap="0">
			<FluentStack Orientation="Orientation.Vertical" Class="spacenav" HorizontalGap="0" VerticalGap="0">
				<TfNavigation />
			</FluentStack>
			<FluentBodyContent Class="content" style="@($"border-top-color:{SpaceState.Value.SpaceColorString}")">
				@Body
			</FluentBodyContent>
		</FluentStack>
	</FluentLayout>
</TfAppInit>
