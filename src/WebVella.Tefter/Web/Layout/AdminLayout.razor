@namespace WebVella.Tefter.Web.Layout
@inherits FluxorLayout
<TfStateInitializer>
	<FluentDesignTheme Mode="@TfConstants.AdminThemeMode" OfficeColor="@TfConstants.AdminThemeColor" />
	<FluentLayout Class="@(ScreenStateSidebarExpanded.Value ? "sidebar-expanded" : "sidebar-collapsed")">
		<FluentHeader Class="header">
			<TfSidebarToggle />
			<TfAdminLocation />
			<FluentSpacer />
			<TfUserNavigation />
		</FluentHeader>
		<FluentStack Orientation="Orientation.Horizontal" Class="wrapper" HorizontalGap="0" VerticalGap="0">
			<FluentStack Orientation="Orientation.Vertical" Class="spacenav" HorizontalGap="0" VerticalGap="0">
				<TfAdminNavigation />
			</FluentStack>
			<FluentBodyContent Class="content" style="@TfConstants.AdminContentStyle">
				@Body
			</FluentBodyContent>
		</FluentStack>
	</FluentLayout>
</TfStateInitializer>