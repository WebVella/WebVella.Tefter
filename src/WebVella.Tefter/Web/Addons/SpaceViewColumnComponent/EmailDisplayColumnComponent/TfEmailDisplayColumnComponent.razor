@namespace WebVella.Tefter.Web.Addons
@inherits TucBaseViewColumn<TfEmailDisplayColumnComponentOptions>
@if (Context.Mode == TucComponentMode.Display)
{
	if (!String.IsNullOrWhiteSpace(_value) && TfValidators.IsValidEmail(_value))
	{
		<div><a href="@($"mailto:{_value}")">@_value</a></div>
	}
	else
	{
		<div>@_value</div>
	}
	
}
else if (Context.Mode == TucComponentMode.Options)
{
	<FluentMessageBar Intent="@MessageIntent.Info" Title="@LOC("The selected component has no options")" AllowDismiss="false" />
}
else
{
	<div style="color:red">@LOC("Component Mode Not implemented")</div>
}


