@namespace WebVella.Tefter.Web.Addons
@inherits TucBaseViewColumn<TfTextDisplayColumnComponentOptions>
@if (Context.Mode == TfComponentPresentationMode.Display)
{
	<div>@_value</div>
}
else if (Context.Mode == TfComponentPresentationMode.Options)
{
	<FluentMessageBar Intent="@MessageIntent.Info" Title="@LOC("The selected component has no options")" AllowDismiss="false" />
}
else
{
	<div style="color:red">@LOC("Component Mode Not implemented")</div>
}


