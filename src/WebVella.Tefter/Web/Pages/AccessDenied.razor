@page "/403"
@layout SystemLayout

<PageTitle>Access Denied</PageTitle>

<h1 class="text-danger">Access Denied</h1>
<p>This page or record does not exist!</p>

<FluentButton OnClick="_goHome">Home Page</FluentButton>

@code {
	[Inject] protected NavigationManager Navigator { get; set; }

	private void _goHome()
	{
		Navigator.NavigateTo(TfConstants.HomePageUrl + $"?{TfConstants.NoDefaultRedirectQueryName}=true", true);
	}
}
