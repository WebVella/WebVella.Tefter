@page "/admin/shared-columns"
@page "/admin/shared-columns/{SharedColumnId:guid}/{*Path}"
@layout AdminLayout
@inherits TfBasePage

<TfLayoutBody>
	<Aside>
		<TfAdminSharedColumnsNavigation />
	</Aside>
	<ChildContent>
		@if (TfAppState.Value.AdminSharedColumns.Count == 0)
		{
			<TfLayoutBodyMain>
				<Header>
					<TfPageHeader>@LOC("Shared Columns")</TfPageHeader>
				</Header>
				<ChildContent>
					<FluentMessageBar Title="No Shared Columns found" AllowDismiss="false"
									  Intent="@MessageIntent.Info" Style="margin-bottom:10px;">
						@LOC("There are no shared columns created yet. Start by pressing the 'Create Shared Column' button.")
					</FluentMessageBar>
				</ChildContent>
			</TfLayoutBodyMain>
		}
		else if (TfAppState.Value.AdminSharedColumn is not null)
		{
			<TfLayoutBodyMain>
				<Header>
					<TfPageHeader>@TfAppState.Value.AdminSharedColumn?.DbName</TfPageHeader>
				</Header>
				<ChildContent>
					<TfAdminSharedColumnDetails />
				</ChildContent>
			</TfLayoutBodyMain>
		}
	</ChildContent>
</TfLayoutBody>
