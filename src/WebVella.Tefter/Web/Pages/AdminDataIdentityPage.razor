@namespace WebVella.Tefter.Web.Pages
@page "/admin/data-identities"
@page "/admin/data-identities/{DataIdentityId}"

@layout AdminLayout
@inherits TfBasePage

<TfLayoutBody>
	<Aside>
		<TfAdminDataIdentityNavigation />
	</Aside>
	<ChildContent>
		@if (TfAppState.Value.AdminDataIdentities.Count == 0)
		{
			<TfLayoutBodyMain>
				<Header>
					<TfPageHeader>@LOC(TfConstants.AdminDataIdentitiesMenuTitle)</TfPageHeader>
				</Header>
				<ChildContent>
					<FluentMessageBar Title="No Data Identities found" AllowDismiss="false"
									  Intent="@MessageIntent.Info" Style="margin-bottom:10px;">
						@LOC("There are no data identities created yet. Start by pressing the 'Create Data Identity' button.")
					</FluentMessageBar>
				</ChildContent>
			</TfLayoutBodyMain>
		}
		else if (TfAppState.Value.AdminDataIdentity is not null)
		{
			<TfLayoutBodyMain>
				<Header>
					<TfPageHeader>@TfAppState.Value.AdminDataIdentity.Name</TfPageHeader>
				</Header>
				<ChildContent>
					<TfAdminDataIdentityDetails/>
				</ChildContent>
			</TfLayoutBodyMain>
		}
	</ChildContent>
</TfLayoutBody>

