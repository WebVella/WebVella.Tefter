@namespace WebVella.Tefter.Web.Components
@inherits TfBaseComponent


@if (ItemId == Guid.Empty)
{
	<TfLayoutBodyMain>
		<Header>
			<TfPageHeader>@LOC("Addon Pages")</TfPageHeader>
		</Header>
		<ChildContent>
			<FluentMessageBar Title="No page selected"
							  Style="@("border: 1px solid var(--neutral-base-color)")"
							  Intent="MessageIntent.Info"
							  Type="@MessageType.Notification"
							  AllowDismiss="false">
				Select a page from the menu
			</FluentMessageBar>
		</ChildContent>
	</TfLayoutBodyMain>
}
else
{
	<TfRegionComponent Context="@(new TfAdminPageScreenRegion())" Scope="@(new TfScreenRegionScope(null,ItemId))" />
}

