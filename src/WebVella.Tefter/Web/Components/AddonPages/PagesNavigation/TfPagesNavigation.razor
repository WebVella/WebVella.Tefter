@namespace WebVella.Tefter.Web.Components
@inherits TfBaseComponent
@if (SidebarExpanded.Value)
{
	<TfLayoutBodyAside>
		<Toolbar>
			<div class="tf-sidetoolbar">
				<div class="tf-sidetoolbar__search">
					<FluentTextField Class="search" Placeholder="@LOC("search...")" Immediate="true" 
						ImmediateDelay="500" Value=@search ValueChanged="onSearch" AutoComplete="off"/>
				</div>
			</div>
		</Toolbar>
		<ChildContent>
			<TfTreeView Items="_getMenu()" />
		</ChildContent>
	</TfLayoutBodyAside>
}

