@namespace WebVella.Tefter.Web.Components
@inherits TfBaseComponent
@if (SidebarExpanded.Value)
{
	<TfLayoutBodyAside>
		<Toolbar>
			<div class="tf-sidetoolbar">
				<div class="tf-sidetoolbar__search">
					<FluentTextField Class="search" Placeholder="@LOC("search...")" Immediate="true" 
						ImmediateDelay="500" Value=@search ValueChanged="onSearch" AutoComplete="off"/>
				</div>
				<div class="tf-sidetoolbar__actions">
					<TfSpaceActions />
				</div>
			</div>
		</Toolbar>
		<ChildContent>
			@{
				var menuItems = _getMenu();
			}
			<TfTreeView Items="menuItems" />
			@if (menuItems.Count == 0)
			{
				<div style="padding-left:5px;padding-top:5px">@LOC("No data found in the space")</div>
				<FluentButton Appearance="@Appearance.Outline" OnClick="onAddClick" Style="margin-top:1rem;">
					<FluentIcon Slot="start" Value="@TfConstants.AddIcon" Color="@Color.Accent" />
					@LOC("Create Dataset")
				</FluentButton>
			}
		</ChildContent>
	</TfLayoutBodyAside>
}

