@namespace WebVella.Tefter.Web.Components
@inherits TfBaseComponent
@if (TfAppState.Value.Space is null)
{
	<TfLayoutBodyMain>
		<Header>
			<TfPageHeader>@LOC("Space Pages")</TfPageHeader>
		</Header>
		<ChildContent>
			<FluentMessageBar Title="No space found"
							  Style="@("border: 1px solid var(--neutral-base-color)")"
							  Intent="MessageIntent.Info"
							  AllowDismiss="false">
				No spaces found yet notification
			</FluentMessageBar>
		</ChildContent>
	</TfLayoutBodyMain>
}
else
{
	@if (TfAppState.Value.SpaceDataList.Count == 0)
	{
		<TfLayoutBodyMain>
			<Header>
				<TfPageHeader>@LOC("Space Pages")</TfPageHeader>
			</Header>
			<ChildContent>
				<FluentMessageBar Title="No existing datasets"
								  Style="@("border: 1px solid var(--neutral-base-color)")"
								  Intent="MessageIntent.Info"
								  AllowDismiss="false">
					Space datasets created yet
				</FluentMessageBar>
			</ChildContent>
		</TfLayoutBodyMain>
	}
	else if (TfAppState.Value.SpaceData is null)
	{
		<TfLayoutBodyMain>
			<Header>
				<TfPageHeader>@LOC("Space Pages")</TfPageHeader>
			</Header>
			<ChildContent>
				<FluentMessageBar Title="No space dataset found"
								  Style="@("border: 1px solid var(--neutral-base-color)")"
								  Intent="MessageIntent.Info"
								  AllowDismiss="false">
					No space dataset found
				</FluentMessageBar>
			</ChildContent>
		</TfLayoutBodyMain>
	}
	else if (Menu == "data")
	{
		<TfSpaceDataData />

	}
	else
	{
		<TfLayoutBodyMain HeaderClass="aside-tabs">
			<Header>
				<TfPageHeader>@LOC("Manage dataset '{0}'", TfAppState.Value.SpaceData.Name)</TfPageHeader>
			</Header>
			<HeaderAside>
				<TfSpaceDataDetailsNav />
			</HeaderAside>
			<ChildContent>
				@if (Menu == "views")
				{
					<TfSpaceDataViews />
				}
				else
				{
					<TfSpaceDataManage />
				}
			</ChildContent>
		</TfLayoutBodyMain>
	}
}
