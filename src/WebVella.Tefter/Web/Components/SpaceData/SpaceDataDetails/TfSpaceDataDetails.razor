@namespace WebVella.Tefter.Web.Components
@inherits TfBaseComponent
@if (TfAppState.Value.Space is null)
{
	<TfLayoutBodyMain>
		<Header>
			<TfLayoutBodyMainHeader>
				<TfPageHeader>@LOC("Space Pages")</TfPageHeader>
			</TfLayoutBodyMainHeader>
		</Header>
		<ChildContent>
			<FluentMessageBar Title="No space found"
							  Style="@("border: 1px solid var(--neutral-base-color)")"
							  Intent="MessageIntent.Info"
							  Type="@MessageType.Notification"
							  AllowDismiss="false">
				No spaces found yet notification
			</FluentMessageBar>
		</ChildContent>
	</TfLayoutBodyMain>
}
else
{
	@if (TfAppState.Value.SpaceDataList.Count == 0)
	{
		<TfLayoutBodyMain>
			<Header>
				<TfLayoutBodyMainHeader>
					<TfPageHeader>@LOC("Space Pages")</TfPageHeader>
				</TfLayoutBodyMainHeader>
			</Header>
			<ChildContent>
				<FluentMessageBar Title="No existing datasets"
								  Style="@("border: 1px solid var(--neutral-base-color)")"
								  Intent="MessageIntent.Info"
								  Type="@MessageType.Notification"
								  AllowDismiss="false">
					Space datasets created yet
				</FluentMessageBar>
			</ChildContent>
		</TfLayoutBodyMain>
	}
	else if (TfAppState.Value.SpaceData is null)
	{
		<TfLayoutBodyMain>
			<Header>
				<TfLayoutBodyMainHeader>
					<TfPageHeader>@LOC("Space Pages")</TfPageHeader>
				</TfLayoutBodyMainHeader>
			</Header>
			<ChildContent>
				<FluentMessageBar Title="No space data found"
								  Style="@("border: 1px solid var(--neutral-base-color)")"
								  Intent="MessageIntent.Info"
								  Type="@MessageType.Notification"
								  AllowDismiss="false">
					No space data found
				</FluentMessageBar>
			</ChildContent>
		</TfLayoutBodyMain>
	}
	else
	{
		<TfLayoutBodyMain>
			<Header>
				<TfLayoutBodyMainHeader>
					<ChildContent>
						<TfPageHeader>@LOC("Manage data '{0}'", TfAppState.Value.SpaceData.Name)</TfPageHeader>
					</ChildContent>
					<Aside>
						<TfSpaceDataDetailsNav />
					</Aside>
				</TfLayoutBodyMainHeader>
			</Header>
			<ChildContent>
				@if (Menu == "views")
				{
					<TfSpaceDataViews />
				}
				else if (Menu == "data")
				{
					<TfSpaceDataData />
				}
				else
				{
					<TfSpaceDataManage />
				}
			</ChildContent>
		</TfLayoutBodyMain>
	}
}
