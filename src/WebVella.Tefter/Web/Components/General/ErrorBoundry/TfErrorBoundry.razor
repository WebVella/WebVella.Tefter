@namespace WebVella.Tefter.Web.Components
<ErrorBoundary>
	<ChildContent>
		@ChildContent
	</ChildContent>
	<ErrorContent>
		@if (ShowErrorDetails)
		{
			<div style="display:flex;">
				<div style="flex:0 0 30px"><FluentIcon Value="TfConstants.ErrorIcon" /></div>
				<div style="@($"flex:1 1 auto; color:var(--error);")">@context.Message</div>
			</div>
		}
		else
		{
			<div style="display:flex;flex-flow:row;" title="@context.Message">
				<div style="flex:0 0 24px">
					<FluentIcon Value="TfConstants.ErrorIcon" />
				</div>
				<div style="@($"flex:1 1 auto; color:var(--error);")">error</div>
			</div>
		}
	</ErrorContent>
</ErrorBoundary>


@code {
	[Parameter] public bool ShowErrorDetails { get; set; } = true;
	[Parameter] public RenderFragment ChildContent { get; set; }
}