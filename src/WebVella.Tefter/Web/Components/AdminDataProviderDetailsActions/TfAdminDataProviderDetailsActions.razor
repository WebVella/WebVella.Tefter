@inherits TfBaseComponent

@if (UC.ActionsMenu == "details")
{
	<FluentStack>
		<FluentButton Appearance="@Appearance.Outline" OnClick="_deleteProvider" Loading="_isDeleting" Disabled="_isDeleting">
			@LOC("Delete")
			<FluentIcon Value="@(new Icons.Regular.Size20.Delete())" Color="@Color.Error" Slot="start" />
		</FluentButton>
		<FluentButton Appearance="@Appearance.Outline" OnClick="_editProvider">
			@LOC("Edit")
			<FluentIcon Value="@(new Icons.Regular.Size20.Edit())" Color="@Color.Accent" Slot="start" />
		</FluentButton>
	</FluentStack>
}
else if (UC.ActionsMenu == "schema")
{
	<FluentButton Appearance="@Appearance.Outline" OnClick="_addColumn">
		@LOC("Add Column")
		<FluentIcon Value="@(new Icons.Regular.Size20.Add())" Color="@Color.Accent" Slot="start" />
	</FluentButton>
}
else if (UC.ActionsMenu == "aux")
{
	<FluentButton Appearance="@Appearance.Outline" OnClick="_addAuxColumn">
		@LOC("Add Aux Column")
		<FluentIcon Value="@(new Icons.Regular.Size20.Add())" Color="@Color.Accent" Slot="start" />
	</FluentButton>
}
else if (UC.ActionsMenu == "keys")
{
	<FluentButton Appearance="@Appearance.Outline" OnClick="_addKey">
		@LOC("Shared key")
		<FluentIcon Value="@(new Icons.Regular.Size20.Add())" Color="@Color.Accent" Slot="start" />
	</FluentButton>
}