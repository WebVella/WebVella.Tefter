@inherits TfBaseComponent
@code {
	private RenderFragment NotificationIcon() =>
        @<FluentIcon Value="@TfConstants.GetIcon("Alert")" Color="Color.Neutral" Title="Notification center" />;
}
<FluentButton BackgroundColor="var(--neutral-layer-4)" OnClick="OpenNotificationCenterAsync"
			  Title="Notification center" Appearance="Appearance.Stealth">
	@if (MessageService.Count(TfConstants.MESSAGES_NOTIFICATION_CENTER) > 0)
	{
		<FluentCounterBadge Count="@MessageService.Count(TfConstants.MESSAGES_NOTIFICATION_CENTER)"
							Max="9"
							ShowOverflow="true"
							BackgroundColor="@Color.Error"
							Color="Color.Fill"
							Appearance="Appearance.Accent">
			<ChildContent>
				@NotificationIcon()
			</ChildContent>
		</FluentCounterBadge>
	}
	else
	{
		@NotificationIcon()
	}
</FluentButton>


