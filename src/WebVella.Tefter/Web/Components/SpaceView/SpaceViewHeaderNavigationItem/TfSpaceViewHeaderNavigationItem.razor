@namespace WebVella.Tefter.Web.Components
@inherits TfBaseComponent
@if (!Item.IsGroup)
{
	<FluentMenuItem Label="@Item.Name" OnClick="@(_=>_onClick(Item.Id))"
					Checked="SelectionDictionary[Item.Id].Contains(ActivePresetId ?? Guid.Empty)"/>
}
else
{
	<FluentMenuItem Label="@Item.Name" Checked="SelectionDictionary[Item.Id].Contains(ActivePresetId ?? Guid.Empty)">
		<MenuItems>
			@foreach (var node in Item.Nodes)
			{
				<TfSpaceViewHeaderNavigationItem @key=node.Id Item="node" OnClick="@(x=> _onClick(x))"
												 SelectionDictionary="SelectionDictionary" ActivePresetId="ActivePresetId" />
			}
		</MenuItems>
	</FluentMenuItem>
}

