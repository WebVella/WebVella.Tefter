@namespace WebVella.Tefter.Web.Components
@inherits TfRecipeStepFormBase

<FluentEditForm EditContext="EditContext"
				FormName="submit-form" class="tf-form" novalidate>
	<DataAnnotationsValidator />
	<FluentGrid>
		<FluentGridItem xs="6">
			<FluentTextField TextFieldType="@TextFieldType.Text" @bind-Value=@Step.Name
							 Label="@LOC("Name")" Style="width:100%" AutoComplete="new-password" />
			<FluentValidationMessage For="@(() => Step.Name)" />
		</FluentGridItem>
		<FluentGridItem xs="6">
		</FluentGridItem>
	</FluentGrid>
</FluentEditForm>
