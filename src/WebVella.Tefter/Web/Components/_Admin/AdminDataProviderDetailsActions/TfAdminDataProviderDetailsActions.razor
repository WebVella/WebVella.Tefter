@namespace WebVella.Tefter.Web.Components
@inherits TfBaseComponent

@if (TfRouteState.Value.ThirdNode == RouteDataThirdNode.Details)
{
	<FluentStack>
		<FluentButton Appearance="@Appearance.Outline" OnClick="_deleteProvider" Loading="_isDeleting" Disabled="_isDeleting">
			@LOC("Delete")
			<FluentIcon Value="@TfConstants.DeleteIcon" Color="@Color.Error" Slot="start" />
		</FluentButton>
		<FluentButton Appearance="@Appearance.Outline" OnClick="_editProvider">
			@LOC("Edit")
			<FluentIcon Value="@TfConstants.EditIcon" Color="@Color.Accent" Slot="start" />
		</FluentButton>
	</FluentStack>
}
else if (TfRouteState.Value.ThirdNode == RouteDataThirdNode.Schema)
{
	<FluentButton Appearance="@Appearance.Outline" OnClick="_addColumn">
		@LOC("Add Column")
		<FluentIcon Value="@TfConstants.AddIcon" Color="@Color.Accent" Slot="start" />
	</FluentButton>
}
else if (TfRouteState.Value.ThirdNode == RouteDataThirdNode.AuxColumns)
{
}
else if (TfRouteState.Value.ThirdNode == RouteDataThirdNode.SharedKeys)
{
	<FluentButton Appearance="@Appearance.Outline" OnClick="_addKey">
		@LOC("Shared key")
		<FluentIcon Value="@TfConstants.AddIcon" Color="@Color.Accent" Slot="start" />
	</FluentButton>
}
else if (TfRouteState.Value.ThirdNode == RouteDataThirdNode.Synchronization)
{

}
else if (TfRouteState.Value.ThirdNode == RouteDataThirdNode.Data)
{

}