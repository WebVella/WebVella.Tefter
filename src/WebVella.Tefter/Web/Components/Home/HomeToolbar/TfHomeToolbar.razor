@namespace WebVella.Tefter.Web.Components
@inherits TfBaseComponent

<div class="home-toolbar">
	<FluentSearch Value="@TfAppState.Value.HomeSearch" ValueChanged="_searchChanged" AutoComplete="off" Placeholder="@LOC("search...")" />
	<FluentButton Appearance="@(TfAppState.Value.HomeSearchInBookmarks ? Appearance.Accent : Appearance.Outline)"
				  OnClick="@(() => _toggleFilter("HomeSearchInBookmarks"))">
		<FluentIcon Value="@TfConstants.BookmarkONIcon.WithColor(TfAppState.Value.HomeSearchInBookmarks ? Color.Accent : Color.Neutral)" />
	</FluentButton>
	<FluentButton Appearance="@(TfAppState.Value.HomeSearchInSaves ? Appearance.Accent : Appearance.Outline)"
				  OnClick="@(() => _toggleFilter("HomeSearchInSaves"))">
		<FluentIcon Value="@TfConstants.SaveIcon.WithColor(TfAppState.Value.HomeSearchInBookmarks ? Color.Accent : Color.Neutral)" />
	</FluentButton>
	<FluentButton Appearance="@(TfAppState.Value.HomeSearchInViews ? Appearance.Accent : Appearance.Outline)"
				  OnClick="@(() => _toggleFilter("HomeSearchInViews"))">
		<FluentIcon Value="@TfConstants.SpaceViewIcon.WithColor(TfAppState.Value.HomeSearchInBookmarks ? Color.Accent : Color.Neutral)" />
	</FluentButton>
</div>