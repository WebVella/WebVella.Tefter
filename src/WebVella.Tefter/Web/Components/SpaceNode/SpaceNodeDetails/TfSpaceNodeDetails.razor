@namespace WebVella.Tefter.Web.Components
@inherits TfBaseComponent

@if (TfAppState.Value.SpaceNode is null)
{
	<TfLayoutBodyMain>
		<Header>
			<TfLayoutBodyMainHeader>
				<TfPageHeader>@LOC("Space Pages")</TfPageHeader>
			</TfLayoutBodyMainHeader>
		</Header>
		<ChildContent>
			<FluentMessageBar Title="No page found"
							  Style="border: 1px solid var(--neutral-base-color)"
							  Intent="MessageIntent.Info"
							  Type="@MessageType.Notification"
							  AllowDismiss="false">
				No page found
			</FluentMessageBar>
		</ChildContent>
	</TfLayoutBodyMain>
}
else if (TfAppState.Value.SpaceNode.ComponentType is not null)
{
	<TfErrorBoundry>
		<DynamicComponent Type="@TfAppState.Value.SpaceNode.ComponentType" Parameters="@_getDynamicComponentParams()" />
	</TfErrorBoundry>
}