@namespace WebVella.Tefter.Web.Components
@inherits TfBaseComponent

@if (TfAppState.Value.Route.HasNode(RouteDataNode.Users))
{
	<FluentButton Title="@LOC("Create User")"
				  IconStart="@TfConstants.AddIcon.WithColor(Color.Accent)"
				  OnClick="addUser" Appearance="@Appearance.Outline">
		@LOC("User")
	</FluentButton>
}
else if (TfAppState.Value.Route.HasNode(RouteDataNode.Roles))
{
	<FluentButton Title="@LOC("Create Role")"
				  IconStart="@TfConstants.AddIcon.WithColor(Color.Accent)"
				  OnClick="addRoleClick" Appearance="@Appearance.Outline">
		@LOC("Role")
	</FluentButton>
}

