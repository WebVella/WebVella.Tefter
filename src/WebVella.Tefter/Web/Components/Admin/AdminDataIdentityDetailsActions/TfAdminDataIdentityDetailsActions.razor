@namespace WebVella.Tefter.Web.Components
@inherits TfBaseComponent

@if (TfAppState.Value.AdminDataIdentity?.IsSystem ?? false)
{
	<FluentButton Appearance="@Appearance.Outline" Disabled=true Title="@LOC("System identity cannot be managed")">
		@LOC("Locked")
		<FluentIcon Value="@TfConstants.LockIcon" Color="@Color.Accent" Slot="start" />
	</FluentButton>
}
else
{
	<FluentButton Appearance="@Appearance.Outline" OnClick="_editIdentity">
		@LOC("Edit")
		<FluentIcon Value="@TfConstants.EditIcon" Color="@Color.Accent" Slot="start" />
	</FluentButton>
}