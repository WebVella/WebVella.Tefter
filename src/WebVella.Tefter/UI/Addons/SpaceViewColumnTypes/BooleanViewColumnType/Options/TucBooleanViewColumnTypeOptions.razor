@namespace WebVella.Tefter.UI.Addons
@inherits TfLocalizedViewColumnComponent

<FluentGrid>
	<FluentGridItem xs="4">
		<FluentInputLabel Label="@LOC("Label")" />
		<FluentCheckbox Value="@Settings.ShowLabel" Style="height:32px;"
		                ValueChanged=@((x)=> _onSettingsChanged(nameof(Settings.ShowLabel),x))
		                Label="@LOC("show label")" />
		<TucValidationMessage Field="@(nameof(Settings.ShowLabel))" Errors="ValidationErrors"/>
	</FluentGridItem>
</FluentGrid>
<FluentGrid>
	<FluentGridItem xs="4">
		<FluentTextField Label="@LOC("TRUE label")"
		                 Value="@Settings.TrueLabel" Style="width:100%"
		                 ValueChanged=@((x)=> _onSettingsChanged(nameof(Settings.TrueLabel),x))
		                 Placeholder="@LOC("empty shows a system one")" />
		<TucValidationMessage Field="@(nameof(Settings.TrueLabel))" Errors="ValidationErrors"/>
	</FluentGridItem>
	<FluentGridItem xs="4">
		<FluentTextField Label="@LOC("FALSE label")"
		                 Value="@Settings.FalseLabel" Style="width:100%"
		                 ValueChanged=@((x)=> _onSettingsChanged(nameof(Settings.FalseLabel),x))
		                 Placeholder="@LOC("empty shows a system one")" />
		<TucValidationMessage Field="@(nameof(Settings.FalseLabel))" Errors="ValidationErrors"/>
	</FluentGridItem>
	<FluentGridItem xs="4">
		<FluentTextField Label="@LOC("NULL label")"
		                 Value="@Settings.NullLabel" Style="width:100%"
		                 ValueChanged=@((x)=> _onSettingsChanged(nameof(Settings.NullLabel),x))
		                 Placeholder="@LOC("empty shows a system one")" />
		<TucValidationMessage Field="@(nameof(Settings.NullLabel))" Errors="ValidationErrors"/>
	</FluentGridItem>
</FluentGrid>
<FluentGrid>
	<FluentGridItem xs="4">
		<FluentInputLabel Label="@LOC("Show TRUE as icon")"/>
		<FluentCheckbox Value="@Settings.TrueValueShowAsIcon" Style="height:32px;"
		                ValueChanged=@((x)=> _onSettingsChanged(nameof(Settings.TrueValueShowAsIcon),x))
		                Label="@LOC("render as icon")" />
		<TucValidationMessage Field="@(nameof(Settings.TrueValueShowAsIcon))" Errors="ValidationErrors"/>
	</FluentGridItem>
	<FluentGridItem xs="4">
		<FluentInputLabel Label="@LOC("Show FALSE as icon")"/>
		<FluentCheckbox Value="@Settings.FalseValueShowAsIcon" Style="height:32px;"
		                ValueChanged=@((x)=> _onSettingsChanged(nameof(Settings.FalseValueShowAsIcon),x))
		                Label="@LOC("render as icon")" />
		<TucValidationMessage Field="@(nameof(Settings.FalseValueShowAsIcon))" Errors="ValidationErrors"/>
	</FluentGridItem>
	<FluentGridItem xs="4">
		<FluentInputLabel Label="@LOC("Show NULL as icon")"/>
		<FluentCheckbox Value="@Settings.NullValueShowAsIcon" Style="height:32px;"
		                ValueChanged=@((x)=> _onSettingsChanged(nameof(Settings.NullValueShowAsIcon),x))
		                Label="@LOC("render as icon")" />
		<TucValidationMessage Field="@(nameof(Settings.NullValueShowAsIcon))" Errors="ValidationErrors"/>
	</FluentGridItem>
</FluentGrid>
<FluentGrid>
	<FluentGridItem xs="12">
		<FluentTextField Label="@LOC("Confirmation message")"
		                 Value="@Settings.ChangeConfirmationMessage" Style="width:100%"
		                 ValueChanged=@((x)=> _onSettingsChanged(nameof(Settings.ChangeConfirmationMessage),x))
		                 Placeholder="@LOC("empty shows a system one")" />
		<TucValidationMessage Field="@(nameof(Settings.ChangeConfirmationMessage))" Errors="ValidationErrors"/>
	</FluentGridItem>
</FluentGrid>
