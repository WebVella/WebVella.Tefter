@namespace WebVella.Tefter.UI.Addons
@inherits TfLocalizedViewColumnComponent

<FluentGrid>
	<FluentGridItem xs="12">
		<FluentTextField Label="@LOC("Confirmation message")"
		                 Value="@Settings.ChangeConfirmationMessage" Style="width:100%"
		                 ValueChanged=@((x) => _onSettingsChanged(nameof(Settings.ChangeConfirmationMessage), x))
		                 Placeholder="@LOC("empty for no confirmation")"/>
		<FluentValidationMessage For="@(() => Settings.ChangeConfirmationMessage)"/>
		<TucValidationMessage Field="@(nameof(Settings.ChangeConfirmationMessage))" Errors="ValidationErrors"/>
	</FluentGridItem>
</FluentGrid>
<FluentGrid>
	<FluentGridItem xs="6">
		<FluentTextField Label="@LOC("Format")"
		                 Value="@Settings.Format" Style="width:100%" Immediate ImmediateDelay="500"
		                 ValueChanged=@((x)=> _onSettingsChanged(nameof(Settings.Format),x))
		                 Placeholder="@LOC("eg. 'N3'")" />
	</FluentGridItem>
	<FluentGridItem xs="6"></FluentGridItem>
</FluentGrid>
