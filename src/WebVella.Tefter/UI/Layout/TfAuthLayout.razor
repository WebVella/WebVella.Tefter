@inherits LayoutComponentBase
@if (_isLoaded)
{
	<FluentDesignTheme Mode="@_themeMode" CustomColor="@_accentColor.GetColor().HEX" NeutralBaseColor="@TfColor.Zinc500.GetColor().HEX"/>
	<CascadingValue TValue="TfAuthLayout" Name="TfAuthLayout" Value="this" IsFixed="true">
		@Body
		<FluentToastProvider MaxToastCount="5" Position="ToastPosition.BottomCenter"
		                     RemoveToastsOnNavigation="false"/>
		<FluentDialogProvider/>
		<FluentTooltipProvider/>
		<FluentKeyCodeProvider/>
		<FluentMenuProvider/>
	</CascadingValue>
}


