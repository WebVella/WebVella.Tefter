@namespace WebVella.Tefter.UI.Components
@inherits TfBaseComponent
<PageTitle>@Title</PageTitle>
<div class="@_cssClass">
    <div class="tflpc__header">
        <div class="tflpc__header__left">
            @if (!String.IsNullOrWhiteSpace(TfAuthLayout.GetState().NavigationState.ReturnUrl))
            {
                <div class="tflpc__header__left__return">
                    <TucAnchor Appearance="@Appearance.Outline" Href="@TfAuthLayout.GetState().NavigationState.ReturnUrl"
                               IconStart="@TfConstants.GetIcon("ArrowLeft")"/>
                </div> 
            }
            @if(!String.IsNullOrWhiteSpace(Icon))
            {
                <div class="tflpc__header__left__icon">
                    <FluentIcon Value="@TfConstants.GetIcon(Icon,size:IconSize.Size24)"/>
                </div>
            }
            <div class="tflpc__header__left__title">@Title</div>
            <div class="tflpc__header__left__action">
                @if (OnEdit.HasDelegate) 
                {
                    <FluentButton Appearance="Appearance.Stealth" 
                                  IconStart="@TfConstants.GetIcon("Edit", IconSize.Size16)" 
                                  OnClick="@(async() => await OnEdit.InvokeAsync())"
                                  AdditionalAttributes="@(new Dictionary<string, object?>(){{"title",@OnEditTooltop}})"/>
                }
                @if (OnAdd.HasDelegate) 
                {
                    <FluentButton Appearance="Appearance.Stealth" 
                                  IconStart="@TfConstants.GetIcon("Add", IconSize.Size16)" 
                                  OnClick="@(async() => await OnAdd.InvokeAsync())"
                                  AdditionalAttributes="@(new Dictionary<string, object?>(){{"title",@OnAddTooltop}})"/>
                }                
            </div>
        </div>
        @if (Toolbar is not null)
        {
            <div class="tflpc__header__right">@Toolbar</div>
        }
    </div>
    @if (Tabs is not null && ShowTabs)
    {
        <div class="tflpc__tabs">@Tabs</div>
    }
    <div class="tflpc__content">
        @if (Aside is not null)
        {
            <div class="tflpc__content__aside">
                @Aside
            </div>
        }
        <div class="tflpc__content__inner">
            @ChildContent
        </div>
    </div>
</div>



