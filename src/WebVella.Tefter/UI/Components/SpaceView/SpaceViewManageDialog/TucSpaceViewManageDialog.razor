@namespace WebVella.Tefter.UI.Components
@inherits TfFormBaseComponent
@* Header *@
<FluentDialogHeader ShowDismiss="true">
	<FluentLabel Typo="Typography.PaneHeader">@LOC("Manage view settings")</FluentLabel>
</FluentDialogHeader>

@* Footer *@
<FluentDialogFooter>
	@if (String.IsNullOrWhiteSpace(_error))
	{
		<FluentButton Appearance="Appearance.Accent" OnClick="@_save" IconStart="@TfConstants.GetIcon("Save")"
		              Loading="_isSubmitting" Disabled="_isSubmitting">@LOC("Save")</FluentButton>
	}
	<FluentButton Appearance="Appearance.Neutral" OnClick="@_cancel">@LOC("Cancel")</FluentButton>
</FluentDialogFooter>

@* Body *@
<FluentDialogBody>
	@if (!string.IsNullOrWhiteSpace(_error))
	{
		<FluentMessageBar Intent="@MessageIntent.Error" AllowDismiss="false">@_error</FluentMessageBar>
	}
	else
	{
		<FluentEditForm EditContext="EditContext" OnValidSubmit="_save"
		                FormName="submit-form" class="tf-form" novalidate>
			<DataAnnotationsValidator/>
			<FluentGrid>
				<FluentGridItem xs="4">
					<FluentInputLabel Label="@LOC("New Rows")"/>
					<FluentCheckbox @bind-Value="@_form.CanCreateRows" Style="height:32px;"
					                Label="@LOC("can create data")"/>
					<FluentValidationMessage For="@(() => _form.CanCreateRows)"/>
				</FluentGridItem>
				<FluentGridItem xs="4">
					<FluentInputLabel Label="@LOC("Update Rows")"/>
					<FluentCheckbox @bind-Value="@_form.CanUpdateRows" Style="height:32px;"
					                Label="@LOC("can update data")"/>
					<FluentValidationMessage For="@(() => _form.CanUpdateRows)"/>
				</FluentGridItem>
				<FluentGridItem xs="4">
					<FluentInputLabel Label="@LOC("Delete Rows")"/>
					<FluentCheckbox @bind-Value="@_form.CanDeleteRows" Style="height:32px;"
					                Label="@LOC("can delete data")"/>
					<FluentValidationMessage For="@(() => _form.CanDeleteRows)"/>
				</FluentGridItem>
			</FluentGrid>	
			<FluentGrid>
				<FluentGridItem xs="6">
					<FluentNumberField TValue="int?" @bind-Value=@_form.FreezeStartingNColumns
					                   Label="@LOC("Freeze Starting Columns")" Style="width:100%"/>
					<div
						class="tf-input-description">@LOC("freezed columns count, not including the checkbox column")</div>
					<FluentValidationMessage For="@(() => _form.FreezeStartingNColumns)"/>
				</FluentGridItem>
				<FluentGridItem xs="6">
					<FluentNumberField TValue="int?" @bind-Value=@_form.FreezeFinalNColumns
					                   Label="@LOC("Freeze Final Columns")" Style="width:100%"/>
					<div class="tf-input-description">@LOC("freezed columns count")</div>
					<FluentValidationMessage For="@(() => _form.FreezeFinalNColumns)"/>
				</FluentGridItem>
			</FluentGrid>
		</FluentEditForm>
	}
</FluentDialogBody>
