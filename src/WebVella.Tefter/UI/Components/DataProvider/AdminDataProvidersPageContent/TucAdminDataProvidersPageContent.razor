@namespace WebVella.Tefter.UI.Components
@inherits TfBaseComponent
<TucPageLayout Icon="@TfConstants.GetIcon("Database")" Area="@LOC("Data")"
			   Title="@LOC("Data Providers")" Color="TfConstants.AdminColor">
	<div style="padding:var(--tf-layout-content-padding)">
		<FluentMessageBar Title="Information" AllowDismiss="false"
						  Intent="@MessageIntent.Info">
			<div>No Data Providers are created yet.</div>
		</FluentMessageBar>
		<FluentButton Appearance="@Appearance.Outline" OnClick="onAddClick" Style="margin-top:2rem;">
			<FluentIcon Slot="start" Value="@TfConstants.GetIcon("Add")" Color="@Color.Accent" />
			@LOC("Create Data provider")
		</FluentButton>
	</div>
</TucPageLayout>