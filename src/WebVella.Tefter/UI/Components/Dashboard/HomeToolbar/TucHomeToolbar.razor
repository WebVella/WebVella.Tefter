@namespace WebVella.Tefter.UI.Components
@inherits TfBaseComponent

<FluentStack>
	<FluentSearch Value="@_navState.Search" ValueChanged="_searchChanged" AutoComplete="off" Placeholder="@LOC("search...")" Style="width:160px" />
	<FluentButton Appearance="Appearance.Outline"
				  OnClick="@(() => _toggleFilter("HomeSearchInBookmarks"))"
				  IconStart="@TfConstants.GetIcon("Bookmark", variant: IconVariant.Filled)!.WithColor(_navState.SearchInBookmarks ? Color.Accent : Color.Neutral)" />
	<FluentButton Appearance="Appearance.Outline"
				  OnClick="@(() => _toggleFilter("HomeSearchInSaves"))"
				  IconStart="@TfConstants.GetIcon("Save")!.WithColor(_navState.SearchInSaves ? Color.Accent : Color.Neutral)" />
	<FluentButton Appearance="Appearance.Outline"
				  OnClick="@(() => _toggleFilter("HomeSearchInViews"))" 
				  IconStart="@TfConstants.GetIcon("Table")!.WithColor(_navState.SearchInViews ? Color.Accent : Color.Neutral)" />
</FluentStack>