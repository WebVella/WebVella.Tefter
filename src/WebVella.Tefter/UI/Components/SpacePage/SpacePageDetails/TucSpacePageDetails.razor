@namespace WebVella.Tefter.UI.Components
@inherits TfBaseComponent

@if (_spacePage is null)
{
	<FluentMessageBar Title="No page found"
					  Style="border: 1px solid var(--neutral-stroke-rest)"
					  Intent="MessageIntent.Info"
					  AllowDismiss="false">
		No page found
	</FluentMessageBar>
}
else if (_spacePage is null)
{
	<FluentMessageBar Title="No page found"
					  Style="border: 1px solid var(--neutral-stroke-rest)"
					  Intent="MessageIntent.Info"
					  AllowDismiss="false">
		No addon component defined
	</FluentMessageBar>
}
else
{
	<TucErrorBoundry ShowAsAlert="true" Style="padding:var(--tf-padding)">
		<DynamicComponent Type="@_spacePage.ComponentType" Parameters="@_getDynamicComponentParams()" />
	</TucErrorBoundry>
}