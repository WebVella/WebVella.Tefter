@namespace WebVella.Tefter.UI.Components
@inherits TfBaseComponent

<FluentMenu @bind-Open="_open" Anchor="view-settings-selector" UseMenuService="true" HorizontalPosition="HorizontalPosition.Right">
	@if (_isFilteredOrSorted)
	{
		<FluentMenuItem OnClick="_createPresetHandler">
			@LOC("Save as Preset")
			<FluentIcon Value="@TfConstants.GetIcon("FilterAdd")" Slot="start"/>
		</FluentMenuItem>
	}
	else
	{
		<FluentMenuItem Disabled="true" AdditionalAttributes="@(new Dictionary<string,object?>(){{"title",LOC("filter or sort the list first")}})">
			@LOC("Save as Preset")
			<FluentIcon Value="@TfConstants.GetIcon("FilterAdd")" Slot="start"/>
		</FluentMenuItem>		
	}
	<FluentMenuItem OnClick="_manageColorRulesHandler">
		@LOC("Coloring Rules")
		<FluentIcon Value="@TfConstants.GetIcon("Color")" Slot="start"/>
	</FluentMenuItem>
</FluentMenu>