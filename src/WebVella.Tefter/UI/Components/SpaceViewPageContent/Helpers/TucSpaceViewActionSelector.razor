@namespace WebVella.Tefter.UI.Components
@inherits TfBaseComponent

	<FluentMenu @bind-Open="_open" Anchor="view-actions-selector" UseMenuService="true" HorizontalPosition="HorizontalPosition.Right">
		@if (SpaceView.CanDeleteRecords(User))
		{
			<FluentMenuItem Disabled="@(SelectedRows.Count == 0)" OnClick="_deleteSelectedRecords">
				@LOC("Delete Selected")
				<FluentIcon Value="@TfConstants.GetIcon("Delete")" Slot="start" Color="@Color.Error"/>
			</FluentMenuItem>
		}
		<TucScreenRegionComponent Region="@_context"/>
	</FluentMenu>