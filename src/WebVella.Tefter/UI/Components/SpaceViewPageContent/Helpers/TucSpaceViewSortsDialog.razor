@namespace WebVella.Tefter.UI.Components
@inherits TfFormBaseComponent
@* Header *@
<FluentDialogHeader ShowDismiss="true" Style="display:none">
	<FluentLabel Typo="Typography.PaneHeader">@LOC("Sort order")</FluentLabel>
</FluentDialogHeader>

@* Footer *@
<FluentDialogFooter>
	<FluentButton Appearance="Appearance.Accent" OnClick="@_submit" IconStart="@TfConstants.GetIcon("Save")">@LOC("Save")</FluentButton>
	<FluentButton Appearance="Appearance.Neutral" OnClick="@_cancel">@LOC("Cancel")</FluentButton>
</FluentDialogFooter>

@* Body *@
<FluentDialogBody>
	<TucSortQueryCard @bind-Items="_items" ViewColumns="_viewColumns" />
</FluentDialogBody>
