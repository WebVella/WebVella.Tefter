@namespace WebVella.Tefter.UI.Components
@inherits TfBaseComponent

@typeparam TOption
@if (_shouldRender)
{
	<FluentSelect TOption="TOption"
	              Items="@Items"
	              Class="@Class"
	              Style="@Style"
	              Placeholder="@_getPlacehoder()"
	              OptionText="@OptionText"
	              OptionValue="@OptionValue"
	              OptionTemplate="@OptionTemplate"
	              Label="@Label"
	              Required=Required
	              Height="@Height"
	              Width="@Width"
	              Id="@Id"
	              Value="@_value"
	              ValueChanged="@((x) => _valueChanged(x))"
	              Disabled="Disabled"/>
}
else
{
	<FluentSelect TOption="TOption"
				  Class="@Class"
				  Style="@Style"
				  Placeholder="..."
				  Label="@Label"
				  Required=Required
				  Height="@Height"
				  Width="@Width"
				  Id="@Id"
				  Disabled="Disabled" />
}
