@namespace WebVella.Tefter.UI.Components
@inherits TfBaseComponent
@code {
	private RenderFragment NotificationIcon() =>
        @<FluentIcon Value="@TfConstants.GetIcon("Alert")" Title="Notification center" />;
}
@if (MessageService.Count(TfConstants.MESSAGES_NOTIFICATION_CENTER) > 0)
{
	<TucAnchor Href="#" OnClick="OpenNotificationCenterAsync" Title="Notification center" Appearance="Appearance.Outline">
		<FluentCounterBadge Count="@MessageService.Count(TfConstants.MESSAGES_NOTIFICATION_CENTER)"
		                    Max="9" Class="tf-counter-badge"
		                    ShowOverflow="true"
		                    BackgroundColor="@Color.Error"
		                    Color="Color.Fill"
		                    Appearance="Appearance.Accent">
		</FluentCounterBadge>
		@NotificationIcon()
	</TucAnchor>
}
else
{
	<TucAnchor Href="#" OnClick="OpenNotificationCenterAsync" 
	           Title="Notification center" Appearance="Appearance.Outline">@NotificationIcon()</TucAnchor>
}


