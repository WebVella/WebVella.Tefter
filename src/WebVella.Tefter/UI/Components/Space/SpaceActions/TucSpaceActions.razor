@namespace WebVella.Tefter.UI.Components
@inherits TfBaseComponent

<div class="tf-space-actions">
    <FluentAnchor Title="@LOC("Home Dashboards")" Class="@(_isHomeSpace() ? "tf-space-actions--active" : "")"
                  Appearance="@Appearance.Stealth" Href="/">@LOC("home")
    </FluentAnchor> 
    <FluentButton Title="@LOC("Space Search [CTRL+Tab]")" Class="@(!_isHomeSpace() ? "tf-space-actions--active" : "")"
                  Appearance="@Appearance.Stealth" OnClick="_findSpace">@LOC("spaces")
    </FluentButton>
</div>