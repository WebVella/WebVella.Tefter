@namespace WebVella.Tefter.UI.Components
@inherits TfBaseComponent
<TucLayoutPageContent Title="@_space.Name" Icon="Circle">
	<ChildContent>
		<div style="padding:var(--tf-padding)">
			<h5>@LOC("No Pages created yet")</h5>
			<p>@LOC("This space has no pages yet. You can start the process by drag & drop files in the sidebar or clicking the button below.")</p>
			<div style="margin-top:2rem">
				<FluentButton OnClick="_addPage" Appearance="Appearance.Outline" IconStart="@TfConstants.GetIcon("Add")">@LOC("Create Page")</FluentButton>
			</div>
		</div>
	</ChildContent>
</TucLayoutPageContent>