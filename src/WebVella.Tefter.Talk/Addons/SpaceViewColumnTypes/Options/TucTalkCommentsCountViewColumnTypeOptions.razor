@namespace WebVella.Tefter.UI.Addons
@inherits TfLocalizedViewColumnComponent

<FluentGrid>
	<FluentGridItem xs="6">
		<FluentInputLabel Label="@LOC("Channel")"/>
		<TucSelect TOption="TalkChannel"
		           Style="width: 100%"
		           Items="ChannelOptions"
		           OptionValue="(x=> x.Id.ToString())"
		           OptionText="(x=> x.Name)"
		           SelectedOption="@(ChannelOptions.FirstOrDefault(x => x.Id == _settings.ChannelId))"
		           SelectedOptionChanged="_folderSelectHandler"/>
	</FluentGridItem>

</FluentGrid>