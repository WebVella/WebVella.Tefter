@using WebVella.Tefter.Web.Components
@namespace WebVella.Tefter.Seeds.SampleDataProvider.Components
@inherits TfFormBaseComponent

<FluentEditForm EditContext="EditContext" FormName="dp-settings" class="tf-form" novalidate>
	<FluentGrid>
		<FluentGridItem xs="12">
			<FluentTextField Required="true"
							 TextFieldType="@TextFieldType.Text"
							 Placeholder="sample test just to show how setting is added and validated"
							 @bind-Value=@_form.SampleSetting AutoComplete="off"
							 @bind-Value:after=_valueChanged
							 Label="Sample setting" Style="width:100%" />
			<FluentValidationMessage For="@(() => _form.SampleSetting)" />
		</FluentGridItem>
	</FluentGrid>

	<FluentGrid>
		<FluentGridItem xs="12">
			<FluentTextArea Required="true"
							Rows="5"
							Value=@_advancedSettings
							ValueChanged="(x=> _changeAdvancedSettings(x))"
							Resize="TextAreaResize.Vertical"
							Label="Advanced Settings" Style="width:100%" />
			<FluentValidationMessage For="@(() => _form.AdvancedSetting)" />
		</FluentGridItem>
	</FluentGrid>
</FluentEditForm>


