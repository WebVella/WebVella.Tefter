@using WebVella.Tefter.Web.Components
@using Microsoft.FluentUI.AspNetCore.Components;
@using WebVella.Tefter.Web.Utils;
@namespace WebVella.Tefter.Seeds.SampleDataProvider.Components
@inherits TfBaseComponent


<FluentGrid>
	<FluentGridItem xs="12">
		<FluentTextField ReadOnly="true"
						 TextFieldType="@TextFieldType.Text"
						 Placeholder="sample test just to show how setting is added and validated"
						 Value=@_form.SampleSetting AutoComplete="off"
						 Label="Sample setting" Style="width:100%" />
	</FluentGridItem>
</FluentGrid>


<FluentGrid>
	<FluentGridItem xs="12">
		<FluentTextArea ReadOnly="true"
						Rows="5"
						Value=@_advancedSettings
						Resize="TextAreaResize.Vertical"
						Label="Advanced Settings" Style="width:100%" />
	</FluentGridItem>
</FluentGrid>



