@namespace WebVella.Tefter.Web.Components

@inherits TfBaseComponent

<div class="@($"spacenav-nav {(SessionState.Value.SidebarExpanded ? "sidebar-expanded" : "sidebar-collapsed")}")">
	<FluentNavMenu>
		<FluentNavLink Id="tf-dashboard-link" Icon="@TfConstants.DashboardIcon"
					   Href="/" Match="@NavLinkMatch.All" />
		<FluentTooltip Anchor="tf-dashboard-link" Position="@TooltipPosition.Right">@TfConstants.DashboardMenuTitle</FluentTooltip>
		<FluentNavLink Id="tf-fast-access-link" Icon="@TfConstants.FastAccessIcon"
					   Href="/fast-access" Match="@NavLinkMatch.Prefix" />
		<FluentTooltip Anchor="tf-fast-access-link" Position="@TooltipPosition.Right">@TfConstants.FastAccesMenuTitle</FluentTooltip>
	</FluentNavMenu>
	<FluentDivider Class="nav-divider"></FluentDivider>
	<FluentNavMenu>
		@foreach (var item in _menuItems)
		{
			<FluentNavLink Id="@item.Id" @key=@item.Id
						   Href="@item.Url" Match="@item.Match" Icon="@item.Icon.WithColor(item.IconColor.ToAttributeValue())" IconColor="@Color.Custom" />
			<FluentTooltip Anchor="@item.Id" Position="@TooltipPosition.Right">@item.Title</FluentTooltip>
		}

		<FluentNavLink Id="tf-add-new-space" OnClick="_addSpaceHandler"
					   Icon="@(new Icons.Regular.Size20.Add())" IconColor="@Color.Accent" />
		<FluentTooltip Anchor="tf-add-new-space" Position="@TooltipPosition.Right">Add new space</FluentTooltip>
	</FluentNavMenu>

</div>

