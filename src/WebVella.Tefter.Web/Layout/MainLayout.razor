@inherits FluxorLayout

@if (_isLoading)
{
	<TfLoadingPange/>
}
else
{
	<FluentDesignTheme Mode="@UserState.Value.User.ThemeMode" OfficeColor="@UserState.Value.User.ThemeColor" />
	<FluentLayout Class="@(SessionState.Value.IsSidebarExpanded ? "sidebar-expanded" : "sidebar-collapsed")">
		<FluentHeader Class="header">
			<TfLogo />
			<FluentSpacer />
			<TfUserNavigation/>
		</FluentHeader>
		<FluentStack Orientation="Orientation.Horizontal" Class="wrapper">
			<FluentStack Orientation="Orientation.Vertical" Class="sidebar">
				<TfSidebarToggle/>
			</FluentStack>
			@Body
		</FluentStack>
	</FluentLayout>

	<div id="blazor-error-ui">
		An unhandled error has occurred.
		<a href="" class="reload">Reload</a>
		<a class="dismiss">🗙</a>
	</div>
}

