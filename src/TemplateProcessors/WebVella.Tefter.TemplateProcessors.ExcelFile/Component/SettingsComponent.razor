@using WebVella.Tefter.Web.Components
@namespace WebVella.Tefter.TemplateProcessors.ExcelFile.Components
@inherits TfFormBaseComponent
<FluentEditForm EditContext="EditContext" FormName="dp-settings" class="tf-form" novalidate>

	<FluentGrid>
		<FluentGridItem xs="6">
			<FluentInputLabel Label="@LOC("Template File")" />
			<TfFileField Value=@_fileLocalPath FileName="@_form.FileName" DownloadUrl="@_downloadUrl" ValueChanged="_fileChanged"/>
			<FluentValidationMessage For="@(() => _form.FileName)" />
		</FluentGridItem>
	</FluentGrid>
</FluentEditForm>


