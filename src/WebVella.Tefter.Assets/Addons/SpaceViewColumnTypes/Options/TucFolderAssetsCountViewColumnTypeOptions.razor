@namespace WebVella.Tefter.UI.Addons
@inherits TfLocalizedViewColumnComponent

<FluentGrid>
	<FluentGridItem xs="6">
		<FluentInputLabel Label="@LOC("Folder")"/>
		<TucSelect TOption="AssetsFolder"
		           Style="width: 100%"
		           Items="FolderOptions"
		           OptionValue="(x=> x.Id.ToString())"
		           OptionText="(x=> x.Name)"
		           SelectedOption="@(FolderOptions.FirstOrDefault(x=> x.Id == _settings.FolderId))"
		           SelectedOptionChanged="_folderSelectHandler"/>
	</FluentGridItem>

</FluentGrid>